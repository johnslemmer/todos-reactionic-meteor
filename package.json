{
  "name": "ReactIonicTodos",
  "private": true,
  "scripts": {
    "start": "meteor run",
    "lint": "eslint ."
  },
  "dependencies": {
    "autoprefixer": "^6.3.1",
    "classnames": "^2.2.3",
    "faker": "^3.0.1",
    "jquery": "^2.2.3",
    "lodash": "^4.5.1",
    "moment": "^2.13.0",
    "react": "^15.0.0",
    "react-addons-css-transition-group": "^15.0.0",
    "react-addons-pure-render-mixin": "^15.0.0",
    "react-dom": "^15.0.0",
    "react-router": "^2.0.0",
    "react-static-container": "^1.0.0",
    "reactionic": "0.2.1"
  },
  "devDependencies": {
    "eslint": "^2.7.0",
    "eslint-config-airbnb": "^7.0.0",
    "eslint-plugin-jsx-a11y": "^0.6.2",
    "eslint-plugin-meteor": "^3.4.0",
    "eslint-plugin-react": "^4.3.0"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "plugins": [
      "meteor"
    ],
    "extends": [
      "airbnb",
      "plugin:meteor/recommended"
    ],
    "rules": {
      "meteor/eventmap-params": [
        2,
        {
          "eventParamName": "event",
          "templateInstanceParamName": "instance"
        }
      ],
      "meteor/template-names": [
        0
      ]
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {
        "browsers": [
          "last 2 versions"
        ]
      }
    }
  }
}
